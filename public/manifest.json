{
  "manifest_version": 3,
  "name": "Notepad Plus",
  "version": "1.0.0",
  "description": "A minimalist notepad designed for capturing sudden bursts of inspiration",
   "icons": {
    "16": "./favicon_io/favicon-16x16.png",
    "32": "./favicon_io/favicon-32x32.png",
    "48": "./favicon_io/favicon-48x48.png",
    "128": "./favicon_io/favicon-128x128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}